<h3> Discover Movies </h3>

<%= button_to "Find Top Rated Movies", user_movies_path(@user), params: {q: "top_20_rated"}, method: :get %>

<br>

<%= form_with url: user_movies_path(@user), params: {q: "keyword"}, method: :get, data: {turbo: false} do |f| %>
  <%= f.text_field :search %>
  <%= f.submit "Find Movies" %>
<% end %>